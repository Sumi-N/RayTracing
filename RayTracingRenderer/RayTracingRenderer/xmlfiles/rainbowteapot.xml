<xml>
  <scene>
    <background r="1" g="1" b="1" texture="texturefiles/clouds.png">
      <scale y="0.4"/>
      <translate y="-0.1"/>
    </background>
    <environment value="0.7" texture="texturefiles/clouds.png"/>
    
    <!-- Objects -->
    <object type="plane" name="groundPlane" material="ground">
      <scale value="1000"/>
    </object>
    <object type="plane" name="wall" material="bricks">
      <scale value="100"/>
      <rotate angle="90" x="1"/>
      <translate y="10"/>
    </object>
    <object type="obj" name="objfiles/diamond.obj" material="glossy1">
      <scale value="6"/>
      <translate x="-28" y="0" z="6"/>
    </object>
    <object type="obj" name="objfiles/christal2.obj" material="glossy1">
      <scale value="6"/>
      <translate x="-14" y="0" z="6"/>
    </object>
    <object type="obj" name="objfiles/ellipse.obj" material="glossy1">
      <scale value="5"/>
      <translate x="0" y="0" z="6"/>
    </object>
    <object type="obj" name="objfiles/christal.obj" material="glossy1">
      <scale value="1"/>
      <translate x="14" y="0" z="6"/>
    </object>
    <object type="obj" name="objfiles/teapot.obj" material="bricks">
      <scale value="0.5"/>
      <rotate angle="-50" z="1"/>
      <translate x="13" y="-21" z="0"/>
    </object>
    <object type="sphere" name="sphere5" material="glossy1">
      <scale value="2"/>
      <translate x="22" y="-30" z="2"/>
    </object>

    <!-- Materials -->
    <material type="blinn" name="ground">
      <diffuse r="1" g="1" b="1" texture="checkerboard">
        <color1 r="0.5" g="0.5" b="0.7"/>
        <color2 r="1.0" g="1.0" b="1.0"/>
        <scale value="0.003"/>
      </diffuse>
      <specular value="0"/>
    </material>
    <material type="blinn" name="bricks">
      <diffuse texture="texturefiles/rainbow3.png">
        <scale value="0.05"/>
      </diffuse>
      <specular value="0.3"/>
      <glossiness value="10"/>
    </material>
    <material type="blinn" name="glossy1">
      <diffuse value="0"/>
      <specular value="0.8"/>
      <glossiness value="50"/>
      <reflection value="0.8" glossiness="0.05"/>
    </material>

    <!-- Lights -->
    <light type="ambient" name="ambientLight">
      <intensity value="0.2"/>
    </light>
    <light type="point" name="pointLight">
      <intensity value="1.0"/>
      <position x="-50" y="-100" z="50"/>
      <size value="5"/>
    </light>
  </scene>

  <camera>
    <position x="42" y="-42" z="15"/>
    <target x="6" y="0" z="-3"/>
    <up x="0" y="0" z="1"/>
    <fov value="40"/>
    <width value="800"/>
    <height value="600"/>
  </camera>
</xml>